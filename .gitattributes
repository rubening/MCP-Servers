# MCP Server Repository .gitattributes

# Handle line endings automatically for different platforms
* text=auto

# Python files
*.py text eol=lf
*.pyw text eol=lf

# JavaScript/Node.js files
*.js text eol=lf
*.json text eol=lf
*.md text eol=lf

# Configuration files
*.cfg text eol=lf
*.conf text eol=lf
*.ini text eol=lf
*.toml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf

# Shell scripts
*.sh text eol=lf
*.bat text eol=crlf

# Documentation
*.txt text eol=lf
*.rst text eol=lf

# Ensure binary files are not modified
*.sqlite binary
*.db binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
